<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout android:layout_height="match_parent" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:orientation="vertical" android:gravity="center">
        <DatePicker android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/DateControl_datePicker">
        </DatePicker>
        <TimePicker android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/DateControl_timePicker" android:layout_marginTop="10dp"></TimePicker>
        <Button android:layout_height="wrap_content" android:id="@+id/DateControl_btn_OK" android:text="OK" android:layout_width="100dp" android:layout_marginTop="10dp"></Button>
    </LinearLayout>
</LinearLayout>
